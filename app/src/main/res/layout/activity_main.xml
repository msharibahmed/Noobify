    <androidx.cardview.widget.CardView
        android:id="@+id/mini_player_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/card_bottom_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:padding="5dp">

            <TextView
                android:id="@+id/mini_player_song_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="22dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="0dp"
                android:layout_toStartOf="@id/mini_player_prev_btn"
                android:maxLines="1"
                android:text="@string/song_name"
                android:textColor="@color/noobify_icon_background"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/mini_player_creator_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mini_player_song_name"
                android:layout_marginStart="22dp"
                android:layout_marginTop="0dp"
                android:layout_toStartOf="@id/mini_player_prev_btn"
                android:maxLines="1"
                android:text="@string/creator_name"
                android:textColor="#5D4037"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/mini_player_prev_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/mini_player_play_btn"
                android:src="@drawable/prev_icon"
                tools:ignore="SpeakableTextPresentCheck" />

            <ImageView
                android:id="@+id/mini_player_play_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/mini_player_next_btn"
                android:src="@drawable/play_btn_icon"
                app:fabSize="mini"
                tools:ignore="ImageContrastCheck" />


            <ImageButton
                android:id="@+id/mini_player_next_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:src="@drawable/next_icon"
                tools:ignore="SpeakableTextPresentCheck" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/seek_bar"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_gravity="bottom"

                android:max="6">

            </SeekBar>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>