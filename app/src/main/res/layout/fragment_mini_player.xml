<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp"

    tools:context=".activities.MiniPlayerFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/mini_player_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="visible"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:id="@+id/card_bottom_player"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/teal_200"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_toStartOf="@id/mini_player_prev_btn"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/mini_player_song_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/song_name"

                    android:textColor="@color/noobify_icon_background"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mini_player_creator_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/creator_name"
                    android:textColor="#5D4037"
                    android:textSize="12sp" />
            </LinearLayout>


            <ImageButton
                android:id="@+id/mini_player_prev_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@id/playBtnParentLayout"
                android:src="@drawable/prev_icon"
                tools:ignore="SpeakableTextPresentCheck" />

            <RelativeLayout
                android:id="@+id/playBtnParentLayout"
                android:layout_width="80dp"
                android:layout_height="80dp"

                android:layout_toStartOf="@id/mini_player_next_btn"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/mini_player_play_btn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="10dp"
                    android:padding="10dp"
                    android:src="@drawable/play_btn_icon"

                    android:visibility="visible"
                    tools:ignore="ImageContrastCheck" />

                <ProgressBar
                    android:id="@+id/audioLoadingProgress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="15dp"
                    android:indeterminateTint="@color/noobify_icon_background"
                    android:padding="10dp"
                    android:visibility="gone" />
            </RelativeLayout>


            <ImageButton
                android:id="@+id/mini_player_next_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="30dp"
                android:src="@drawable/next_icon"
                tools:ignore="SpeakableTextPresentCheck" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>


</FrameLayout>